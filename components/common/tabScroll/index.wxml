<!-- tabScroll/index.wxml -->
<scroll-view scroll-x scroll-with-animation scroll-left="{{ scrollLeft }}">
  <view class="tab">
    <view class="tab-item{{ currentIndex===index?' tab-active':'' }}" id="tab-item-{{ key }}-{{ index }}"
      wx:for="{{ list }}" wx:key="index" data-index="{{ index }}" bindtap="onTabItem">
      {{ nameKey?item[nameKey]:item }}
    </view>
  </view>
</scroll-view>